#include<iostream>
using namespace std;

int dividir_array(int *array, int ini, int fin) {
    int izq;
    int der;
    int pivote;
    int temp;
 
    pivote = array[ini];
    izq = ini;
    der = fin;
 

    while (izq < der) {
        while (array[der] > pivote) {
            der--;
        }
 
        while ((izq < der) && (array[izq] <= pivote)) {
            izq++;
        }
 

        if (izq < der) {
            temp = array[izq];
            array[izq] = array[der];
            array[der] = temp;
        }
    }
    temp = array[der];
    array[der] = array[ini];
    array[ini] = temp;

    return der;
}
 

void quicksort(int *array, int ini, int fin)
{
    int pivote;
 
    if (ini < fin) {
        pivote= dividir_array(array, ini, fin);
 
        // Ordeno la lista de los menores
        quicksort(array, ini, pivote - 1);
 
        // Ordeno la lista de los mayores
        quicksort(array, pivote + 1, fin);
    }
}

 

 
int main()
{
    int const MAX = 100;
    int tam_array;
 
    cout << "Ingresa tamaÃ±o del array: " << endl;
    cin >> tam_array;
 
    int a[tam_array];
    for (int i = 0; i < tam_array; i++) {
        a[i] = rand() % MAX;
    }
 
    cout << "Array antes de ordenarse: " << endl;
    for (int i = 0; i < tam_array; i++) {
        cout << a[i] << " ";
    }
 
    cout << endl << endl;
 
    quicksort(a, 0, tam_array - 1);

    cout << "El array ordenado es :  " << endl;
    for (int i = 0; i < tam_array; i++ ){
        cout << a[i] << "-";
    }
 
    cout << endl << endl;
 
    return 0;

}
